{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    // Launch Chrome via 'cmd' -> "chrome-exe-path" --remote-debugging-port=9222
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Client Side: Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}/public"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Server Side: Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\app.js"
        }
    ]
}